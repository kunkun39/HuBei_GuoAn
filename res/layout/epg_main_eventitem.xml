<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventitem_Linearlayout"
    android:layout_width="580dip"
    android:layout_height="55dip"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:minHeight="55dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/epg_event_Tview_time"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:gravity="right|center_vertical"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/epg_event_Tview_info"
        android:layout_width="290dip"
        android:layout_height="40dip"
        android:layout_marginLeft="120dip"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="22sp" />
    
    
     <ImageView
        android:id="@+id/eventisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dip"
        android:background="@drawable/isplaying"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/epg_event_Tview_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dip"
        android:background="@drawable/epgydtag"
        android:visibility="gone" />

</LinearLayout>