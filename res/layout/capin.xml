<?xml version="1.0" encoding="utf-8"?>
<FrameLayout     
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/linout_caset_id"
    android:layout_width="1060dip"
 	android:layout_height="599dip"
 	android:orientation="horizontal"
 	android:background="@drawable/back" 	
 	android:layout_gravity="center">
 	<LinearLayout 
 	    android:orientation="vertical"
 	    android:layout_height="fill_parent"
 	    android:layout_width="fill_parent"
 	    >
 	    <TextView 
 	        android:layout_marginTop="30dip"
 	        android:text="修改PIN码"
 	        android:textSize="28sp"
 	        android:textColor="@color/white"
 	        android:gravity="center"
 	        android:layout_width="fill_parent"
 	        android:layout_height="40dip"
 	        android:background="@color/transparent"
 	        />
 	<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center" >     
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_pinset_oldcode"
        android:textColor="@color/white"
        android:textSize="@dimen/FONT_SIZE_SMALL"
        android:layout_marginTop="90dip"/>
    <EditText 
        android:id="@+id/pin_input_oldcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dip"
        android:layout_marginLeft="100dip"
        android:inputType="textPassword"
        android:gravity="center"
        android:singleLine="true"
        android:maxWidth="260dip"
        android:maxLength="8"
        android:background="@drawable/item_pinset_selector"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_pinset_newcode"
        android:textColor="@color/white"
        android:textSize="@dimen/FONT_SIZE_SMALL"
        android:layout_marginTop="130dip"
        android:layout_marginLeft="0dip"/>
    <EditText 
        android:id="@+id/pin_input_newcode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dip"
        android:layout_marginLeft="100dip"
        android:inputType="textPassword"
        android:gravity="center"
        android:singleLine="true"
        android:maxWidth="260dip"
        android:maxLength="8"
        android:background="@drawable/item_pinset_selector"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_pinset_newcode"
        android:textColor="@color/white"
        android:textSize="@dimen/FONT_SIZE_SMALL"
        android:layout_marginTop="170dip"
        android:layout_marginLeft="0dip"/>
    <EditText 
        android:id="@+id/pin_input_newcode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dip"
        android:layout_marginLeft="100dp"
        android:inputType="textPassword"
        android:gravity="center"
        android:singleLine="true"
        android:maxWidth="260dip"
        android:maxLength="8"
        android:background="@drawable/item_pinset_selector"/>

    <Button 
        android:id="@+id/button_pin_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dip"
        android:layout_marginLeft="190dp"
        android:background="@drawable/button_sure_selector"/>
		</RelativeLayout>
 	</LinearLayout>
 </FrameLayout>


